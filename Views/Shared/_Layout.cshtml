<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="~/img/favicon.ico">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title>@ViewData["Title"]</title>

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap-grid.min.css" />

    <!-- Animation library for notifications -->
    <link rel="stylesheet" href="~/css/toastr.min.css" />

    <!-- Light Bootstrap Table core CSS -->
    <link rel="stylesheet" href="~/css/light-bootstrap-dashboard.css?v=1.4.0" />

    <!-- Fonts and icons -->
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:400,700,300" type="text/css">
    <link rel="stylesheet" href="~/css/pe-icon-7-stroke.css" />
</head>
<body>

    <div class="wrapper">
        <div class="sidebar" data-color="purple" data-image="~/img/sidebar-5.jpg">
            <div class="sidebar-wrapper">
                <div class="logo">
                    <a asp-controller="Home" asp-action="Index" class="simple-text" style="text-decoration:none">
                        Expense Tracker
                    </a>
                </div>

                <ul class="nav">
                    <li class="active">
                        <a asp-controller="Home" asp-action="Index" style="text-decoration:none">
                            <i class="pe-7s-graph"></i>
                            <p>Home</p>
                        </a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>
                            <a asp-controller="Account" asp-action="Information"  style="text-decoration:none">
                                <i class="pe-7s-user"></i>
                                <p>User Profile</p>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Wallet" asp-action="List" style="text-decoration:none">
                                <i class="pe-7s-note2"></i>
                                <p>Wallet</p>
                            </a>
                        </li>
                        <li>
                            <a href="typography.html" style="text-decoration:none">
                                <i class="pe-7s-news-paper"></i>
                                <p>Statistic</p>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Expense" asp-action="List" style="text-decoration:none">
                                <i class="pe-7s-science"></i>
                                <p>Expense</p>
                            </a>
                        </li>
                        <li>
                            <form asp-action="Logout" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Do you want to logout?');">
                                    Logout
                                </button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a asp-controller="Account" asp-action="Login" style="text-decoration:none">
                                <i class="pe-7s-user"></i>
                                <p>Login</p>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="Register" style="text-decoration:none">
                                <i class="pe-7s-note2"></i>
                                <p>Register</p>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>

        @* This is the Navbar design *@
        <div class="main-panel">
            <nav class="navbar navbar-default navbar-fixed">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="#">@ViewData["Title"]</a>
                    </div>
                </div>
            </nav>

            @* This is for the content *@
            <div class="content">
                <partial name="_Notification" />
                @RenderBody()
            </div>

            @* This is a footer *@
            <footer class="footer">
                <div class="container-fluid">
                    <nav class="pull-left">
                        <ul>
                            <li>
                                <a asp-controller="Home" asp-action="Index">
                                    Home
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    Company
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    Portfolio
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    Blog
                                </a>
                            </li>
                        </ul>
                    </nav> 
                </div>
            </footer>
        </div>
    </div>

    <!-- Core JS Files -->
    <script src="~/js/jquery-3.7.1.min.js" type="text/javascript"></script>
    <script src="~/js/bootstrap.min.js" type="text/javascript"></script>

    <!-- Charts Plugin -->
    <script src="~/js/chartist.min.js"></script>

    <!-- Notifications Plugin -->
    <script src="~/js/bootstrap-notify.js"></script>


    <script type="text/javascript">
        $(document).ready(function () {

            demo.initChartist();

            $.notify({
                icon: 'pe-7s-gift',
                message: "Welcome to <b>Light Bootstrap Dashboard</b> - a beautiful freebie for every web developer."

            }, {
                type: 'info',
                timer: 4000
            });

        });
    </script>

    @section Scripts{
        @{
            <partial name = "_ValidationScriptsPartial"/>
        }
    }

    @RenderSection("Scripts", required: false)

</body>
</html>