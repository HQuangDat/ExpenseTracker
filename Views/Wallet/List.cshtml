@model IEnumerable<ExpenseTracker.Models.Wallet>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List</h1>

<p>
    <div class="col-6 text-end">
        <a class="btn btn-primary" asp-action="Add">Create New</a>
    </div>
    <div class="col-6 text-end">
        <a class="btn btn-primary" asp-action="AddType">Create new wallet type</a>
    </div>
</p>
<table class="table table-responsive table-hover text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Balance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WalletType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Balance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WalletType.WalletTypeId)
            </td>
            <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.WalletId" asp-route-id="@item.UserId">Edit</a> |
                    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.WalletId" asp-route-id="@item.UserId">Details</a> |
                    <a class="btn btn-warning" asp-action="Delete" asp-route-id="@item.WalletId" asp-route-id="@item.UserId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
